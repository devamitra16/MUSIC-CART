<section class="section">
<% @orders.each do |order| %>
<%order.ordered_items.each do |ordered_item|%>
  <div class="columns align-items-center">
  <div class="column is-1">
    <%= ordered_item.quantity %>
  </div>
  <div class="column is-2">
    <figure class="is-128x128 image">
      <%= image_tag(ordered_item.instrument.image_url(:thumb)) %>
    </figure>
  </div>
  <div class="column is-9">
    <strong><%= ordered_item.instrument.title %></strong>
    <div class="columns align-items-center">
      <div class="content column is-9">
        <%= truncate(ordered_item.instrument.description, length: 140) %>
        <br>
        <%=ordered_item.created_at%>
      
      </div>
      <div class="column is-3 has-text-right">
        <strong class="f4"><%= number_to_currency(ordered_item.total_price) %></strong>
        <%if ordered_item.order_status == "ordered"%>
  <%= link_to 'Cancel order', ordered_item, method: :delete, data: { confirm: "Are you sure? " }, class: "button is-small mb4" %>
  <%end%>
      </div>
      <div class="has-text-right">
  <!-- <%#= link_to 'Add quantity',r,method: :get, class: "button is-small mb4" %>
  <%#= link_to 'Reduce quantity',root_path,method: :get, class: "button is-small mb4" %> -->
  <%if ordered_item.order_status == "ordered"%>
  <%= link_to 'Remove Item', ordered_item, method: :delete, data: { confirm: "Are you sure? " }, class: "button is-small mb4" %>
  <%end%>

</div>
    </div>
  </div>
</div>
<br>
      <br>
      <br>
      <br>
       <%end%>
      
    <% end %>

</section>
