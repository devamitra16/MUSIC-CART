<%= form_with model: @order, local: true do |f| %>
  <div style="margin-left: 350px;margin-top: 20px;">
    <p>
    <h4 class="title"> Necessary details to place your order</h4> 
  </p>
  </div>
  <div style="margin-left: 450px; margin-top: 25px;">
  <p class="f4">
    <%= f.label :contact_number %><br>
    <%= f.text_area :contact_number %>
  </p>
  <p class="f4">
    <%= f.label :Delivery_address %><br>
    <%= f.text_area :address %>
  </p>
  <p class="f4">
    <%= f.label :payment_method %><br>
    <%= f.select :payment_method, [["CashOnDelievery", "CashOnDelievery"], ["DebitOrCredit", "DebitOrCredit"]] %>
  </p>

<br>
  <div id="cod">
  <p>
    <%= f.submit :Place_order , class: 'button is-warning'%>
    <%#= link_to 'SUBMIT',order_path, class:'button is-light' %>
  </p>
</div>
  <br>
  <div id="pay">
  <h1 class="f4 title">Payment via debit/credit</h1>

    <%= f.fields_for :payment do |payments_form| %>
        <p class="f4">
    <%= payments_form.label :card_number%><br>
    <%= payments_form.text_area :card_number %>
  </p>
  <p class="f4">
    <%= payments_form.label :expiry_month %><br>
    <%= payments_form.text_area :expiry_month %>
  </p>
  <p class="f4">
    <%= payments_form.label :expiry_year %><br>
    <%= payments_form.text_area :expiry_year %>
  </p>
  <p class="f4">
    <%= payments_form.label :cvv %><br>
    <%= payments_form.text_area :cvv%>
  </p>
  <p class="f4">
    <%= payments_form.label :name_on_the_card %><br>
    <%= payments_form.text_area :name_on_the_card %>
  </p>
  <p>
    

    <% end %>
<%= f.submit :Place_order , class: 'button is-warning'%>
  <!-- <div class="form-inputs">
  </div>
  <div class="form-actions">
    <%#= f.button :submit %>
  </div> -->
<%end %>
</div>
</div>

<br>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js">
  
</script>
<script>
  $(document).ready(function(){
     $("#pay").hide();
    $("#cod").show();


});
  $("#order_payment_method").change(function(e){
    
    
    if ($('#order_payment_method').val()=="CashOnDelievery"){
    $("#pay").hide();
    $("#cod").show();
  }else{
    $("#pay").show();
    $("#cod").hide();
  }
  });

  
 
</script>


<%#= link_to 'Payment-debit/credit',new_order_payment_path(@order),class: "button is-danger" %>