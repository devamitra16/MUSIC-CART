      <div class="box">
 <div style="margin-right: 200px" >
  <div class="row is-20">
    <figure class="image is-128x128 ">
      <%= image_tag(product.image_url(:thumb)) %>
    </figure>
  </div>
  <br>
  <br>
  <br>
  <br>

    <div class="column is-50">
    
    	
    <strong><%= product.title %></strong>
    <br>
    <br>
  
   
        <%= truncate(product.description, length: 140) %>
      
      
         <p>Seller:
                          <%= product.user.name %>
                      </p>
                      
    
        <p>Price: 
      	<strong><%= number_to_currency(product.price) %></strong>
      </p>
      </div>
      
     <div class="column is-15 has-text-left">

        <%= link_to 'Have a look at your favourite instrument', instrument_path(product), class:"button is-warning" %>
