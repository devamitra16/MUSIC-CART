<%if user_signed_in?%>
<%if current_user.wishlist.present? %>
  <% if current_user.wishlist.instruments.present?%>
  <div style="margin-left: 400px;margin-top: 20px;">
    <p>
    <h4 class="title"> YOUR WISHLIST</h4> 
  </p>
  </div>
  <div style="margin-left: 200px; margin-top: 25px;">
    
  <br>
  <br>
    <% @wishlist.instruments.each do |product| %>
